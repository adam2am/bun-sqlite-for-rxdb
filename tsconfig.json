{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "ES2021",
      "ES2021.WeakRef"
    ],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "$app/*": ["src/*"]
    },
    "types": [
      "bun-types"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".ignoreFolder"
  ]
}
